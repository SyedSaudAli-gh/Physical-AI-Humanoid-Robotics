{
  "content_generation_pipeline": {
    "default_settings": {
      "target_audience": "undergraduate_students",
      "target_word_count": 3000,
      "readability_target_grade_level": 10,
      "quality_threshold": 0.8,
      "supported_modules": [
        "ROS 2",
